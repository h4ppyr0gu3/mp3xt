{
  "manifest_version": 2,
  "version": "1.0",
  "name": "mp3xt",
  "author": "h4ppyr0gu3",
  "description": "mapp helper extension",
  "browser_action": {
    "default_icon": {
      "16": "assets/icons/favicon-16x16.png",
      "32": "assets/icons/favicon-32x32.png",
      "48": "assets/icons/favicon-48x48.png",
      "96": "assets/icons/favicon-96x96.png"
    },
    "default_title": "mp3xt",
    "default_popup": "popup.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "addon@example.com",
      "strict_min_version": "42.0"
    }
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "webRequest",
    "scripting"
  ]
}
